<h2>New Post</h2>

<%= f = form_for @changeset, "#", id: "board-form", phx_target: @myself,
phx_change: "validate", phx_submit: "save" %>

<%= label f, :title %>
<%= text_input f, :title, required: true %>
<%= error_tag f, :title %>

<%= label f, :body %>
<%= textarea f, :body %>
<%= error_tag f, :body %>

<%= submit "Post", phx_disable_with: "Posting..." %>
</form>
